{
  "name": "benefitmap",
  "private": true,
  "scripts": {
    "postinstall": "npm install --prefix BenefitMapFrontend",
    "dev": "concurrently -k \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "cross-env-shell \"cd BenefitMapBackend && (./gradlew bootRun || gradlew.bat bootRun)\"",
    "dev:frontend": "npm run dev --prefix BenefitMapFrontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  }
}
