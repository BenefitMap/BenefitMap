{
  "name": "benefitmap",
  "private": true,
  "workspaces": [
    "BenefitMapFrontend"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace BenefitMapFrontend run dev",
    "dev:backend:win": "dotenv -e .env -- cross-env-shell \"cd BenefitMapBackend && gradlew.bat bootRun\"",
    "dev:backend:unix": "dotenv -e .env -- sh -c 'cd BenefitMapBackend && ./gradlew bootRun'",
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm:dev:backend:win\" \"npm:dev:frontend\"",
    "dev:unix": "concurrently -k -n backend,frontend -c blue,green \"npm:dev:backend:unix\" \"npm:dev:frontend\"",
    "build": "npm --workspace BenefitMapFrontend run build && cd BenefitMapBackend && ./gradlew.bat build",
    "clean": "npm --workspace BenefitMapFrontend run clean || echo ok"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  }
}